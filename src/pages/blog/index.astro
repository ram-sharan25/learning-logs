---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Learning Logs">
  <div>
    <h1 class="text-4xl font-bold mb-8">
      <span class="terminal-prompt"></span>Blog
    </h1>

    {sortedPosts.length === 0 ? (
      <div class="p-8 bg-solarized-base02 border border-solarized-base01 rounded-lg text-center">
        <p class="text-solarized-base0 text-lg">
          No posts yet. Check back soon!
        </p>
        <p class="text-solarized-base00 mt-4">
          I'm currently working on converting my learning notes into publishable articles.
        </p>
      </div>
    ) : (
      <div class="space-y-6">
        {sortedPosts.map((post) => (
          <article class="p-6 bg-solarized-base02 border border-solarized-base01 rounded-lg hover:border-solarized-blue transition-all">
            <a href={`/blog/${post.slug}`} class="group">
              <h2 class="text-2xl font-bold mb-3 text-solarized-blue group-hover:text-solarized-cyan transition-colors">
                {post.data.title}
              </h2>
              {post.data.description && (
                <p class="text-solarized-base0 mb-4 text-lg">
                  {post.data.description}
                </p>
              )}
              <div class="flex items-center gap-4 text-sm text-solarized-base00">
                <time datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                {post.data.tags.length > 0 && (
                  <div class="flex gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="px-2 py-1 bg-solarized-base03 border border-solarized-base02 rounded text-solarized-cyan">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          </article>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
